@model IEnumerable<InteriorShoppe.Models.Basket>

<h2>Order Summary</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Furniture.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Furniture.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Furniture.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Furniture.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="Index" asp-controller="Shop">Back to Shop</a>
</div>